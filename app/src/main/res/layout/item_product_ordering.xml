<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="6dp"
        android:outlineSpotShadowColor="@color/red">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_product"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/food_ordering" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient" />

                </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/name_product_ordering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پیتزا پپرونی"

                        android:fontFamily="@font/iran_sans"
                        android:textSize="18dp"
                        android:textColor="@color/matn"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:paddingVertical="5dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        android:elevation="6dp"
                        android:layout_margin="2dp"
                        android:layout_gravity="center"
                        android:outlineSpotShadowColor="@color/red"
                        app:cardBackgroundColor="@color/text">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="5dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/group_white"/>

                            <TextView
                                android:id="@+id/category_ordering"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="فست فود"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:textColor="@color/red"
                                android:fontFamily="@font/iran_sans"

                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:paddingHorizontal="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="قیمت :"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:textColor="#737373"
                                android:fontFamily="@font/iran_sans"/>


                            <TextView
                                android:id="@+id/price_product_ordering"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="54000"
                                android:textSize="16dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/red"
                                android:fontFamily="@font/iran_sans"/>

                        <TextView
                            android:id="@+id/toman"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="تومان"
                            android:textSize="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="#737373"
                            android:layout_marginRight="5dp"
                            android:fontFamily="@font/iran_sans"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/add"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardBackgroundColor="@color/red"
                            android:layout_marginStart="10dp"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:src="@drawable/pluse"
                                />
                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:id="@+id/number_pro"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textStyle="bold"
                            android:fontFamily="@font/iran_sans"
                            android:textSize="18dp"
                            android:textColor="#737373"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"/>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/remove"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:cardBackgroundColor="@color/red"
                            app:cardCornerRadius="15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:src="@drawable/manfi1"
                                />


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>