<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="20dp"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    android:background="@drawable/background_dialog"
    android:orientation="vertical">

    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="درباره ما"
        android:fontFamily="@font/iran_sans"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="با تشکر از انتخاب شما برای استفاده از این برنامه!"
        android:textSize="16dp"
        android:fontFamily="@font/iran_sans"
        android:layout_marginTop="20dp"/>

    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="اگر از این برنامه خوشتان آمد و برایتان مفید بود به این اپلیکیشن ، در مارکتی که از آن دانلود کرده اید نظر و امتیاز دهید."
        android:textSize="16dp"
        android:fontFamily="@font/iran_sans"
        android:layout_marginTop="20dp"/>


    <com.uncopt.android.widget.text.justify.JustifiedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پشتیبانی و راه ارتباطی با برنامه نویس"
        android:textSize="16dp"
        android:fontFamily="@font/iran_sans"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="n.alibagheri1998@gmail.com"
        android:textSize="16dp"
        android:fontFamily="@font/iran_sans"
        />


    <TextView
        android:id="@+id/close_dialog_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بستن"
        android:textSize="16dp"
        android:fontFamily="@font/iran_sans"
        android:textColor="@color/red"
        android:layout_gravity="left"
        android:layout_marginTop="20dp"
        />


</LinearLayout>